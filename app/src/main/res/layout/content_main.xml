<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/content_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context="com.example.bigmercu.acheckbox.MainActivity"
              tools:showIn="@layout/activity_main"
              android:orientation="vertical"
              app:layout_collapseParallaxMultiplier="0.6">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="9dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.bigmercu.acheckbox.waveView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@color/cardview_light_background"/>

            <TextView
                android:text="40%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="80sp"
                android:layout_marginBottom="15dp"
                android:textStyle="normal|bold|italic"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/colorPrimary1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="serif-monospace"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <com.bigmercu.bCheckbox.BBox
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:check_text="算法"
        app:color_after="@color/colorAccent"
        app:color_before="@color/colorPrimary"
        app:check_style="hook"
        app:show_border="true"
        android:id="@+id/BBox3" />

    <com.bigmercu.bCheckbox.BBox
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:check_text="Android开发艺术探索"
        app:color_after="@color/colorPrimaryDark2"
        app:color_before="@color/colorPrimary"
        app:check_style="fork"
        app:show_border="true"
        android:id="@+id/BBox2"/>

    <com.bigmercu.bCheckbox.BBox
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:check_text="Core Java"
        app:color_after="@color/colorPrimaryDark1"
        app:color_before="@color/colorPrimaryDark2"
        app:check_style="fork"
        app:show_border="true"
        android:id="@+id/BBox4"/>

    <com.bigmercu.bCheckbox.BBox
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:check_text="网络"
        app:color_after="@color/colorAccent2"
        app:color_before="@color/colorPrimary2"
        app:check_style="hook"
        app:show_border="true"
        android:id="@+id/BBox5"/>

    <com.bigmercu.bCheckbox.BBox
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:check_text="单词"
        app:check_style="fork"
        app:show_border="true"
        app:is_circle_border="false"
        android:id="@+id/BBox6"/>

    <com.bigmercu.bCheckbox.BBox
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:check_text="女票"
        app:check_style="hook"
        app:show_border="false"
        android:id="@+id/BBox7"/>
</LinearLayout>
